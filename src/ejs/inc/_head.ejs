<%
// define
const SITESETTING = (typeof siteSetting === 'undefined') ? '' : siteSetting;
const metaData = (typeof meta === 'undefined') ? '' : meta;

// title
const title = (typeof metaData.title === 'undefined') ? '' : metaData.title;

// description
const description = (typeof metaData.description === 'undefined') ? '' : metaData.description;

// og:type
const ogtype = metaData.ogtype
  ? metaData.ogtype
  : (metaData.pageName === 'p-top') ? 'website' : 'article';
%>

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %><% if(!(metaData.pageName === 'p-top')){ %> | <%= SITESETTING.siteName %><% } %></title>
    <meta name="description" content="<%= description %>">
    <meta property="og:type" content="<%= ogtype %>">
    <meta property="og:title" content="<%= title %>">
    <meta property="og:description" content="<%= description %>">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/style.css" />
  </head>
  <body  class="<%= metaData.pageName %>">
    <%- include('_header') %>